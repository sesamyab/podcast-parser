{
  "name": "@sesamy/podcast-parser",
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "version": "1.0.0",
  "main": "dist/podcast-parser.cjs",
  "module": "dist/podcast-parser.mjs",
  "types": "dist/podcast-parser.d.ts",
  "exports": {
    ".": {
      "types": "./dist/podcast-parser.d.ts",
      "require": "./dist/podcast-parser.cjs",
      "import": "./dist/podcast-parser.mjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf build/**/* && tsc && vite build --config vite.dev.config.ts",
    "build:prod": "rimraf build/**/* && tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts && copyfiles ./package.json build && copyfiles ./README.md build",
    "preview": "vite preview",
    "type-check": "tsc",
    "semantic-release": "semantic-release",
    "lint": "eslint . --ext .ts",
    "format": "prettier . --write",
    "test": "vitest"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true,
          "tarballDir": "dist",
          "pkgRoot": "build"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/node": "24.7.2",
    "@types/sanitize-html": "2.16.0",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "copyfiles": "2.4.1",
    "dts-bundle-generator": "9.5.1",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "semantic-release": "24.2.9",
    "typescript": "5.9.3",
    "vite": "7.1.12",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@sesamy/podcast-schemas": "1.8.2",
    "fast-xml-parser": "5.3.0",
    "sanitize-html": "2.17.0",
    "zod": "4.1.12"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
